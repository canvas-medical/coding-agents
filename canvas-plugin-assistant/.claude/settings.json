{
  "model": "opus",
  "permissions": {
    "allow": [
      "Bash",
      "Skill",
      "WebFetch(domain:*.canvasmedical.com)",
      "Read",
      "Search",
      "Write(**/.cpa-workflow-artifacts/**)",
      "Edit(**/.cpa-workflow-artifacts/**)"
    ],
    "deny": [
      "Read(**/evals/**/expected.json)",
      "Read(**/evals/case_index.md)"
    ],
    "ask": [
        "Bash(rm:*)",
        "Bash(mount:*)",
        "Bash(sudo:*)",
        "Bash(dd:*)",
        "Bash(chmod:*)",
        "Bash(chown:*)"
    ]
  }
}
